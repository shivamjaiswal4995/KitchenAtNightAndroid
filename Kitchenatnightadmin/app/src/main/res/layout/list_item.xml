<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lo_list_item"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:id="@+id/id_sign_veg_or_nonveg"
        android:focusable="false"
        android:src="@drawable/nonveg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_item_name"
            android:text="Item name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_item_price"
            android:text="Price"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:id="@+id/bt_edit_item"
            android:text="Edit"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/bt_decrease_item"
                android:background="@drawable/ic_remove_black_24dp"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/tv_no_of_item"
                android:visibility="gone"
                android:gravity="center"
                android:text="0"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/bt_increase_item"
                android:background="@drawable/ic_add_black_24dp"
                android:visibility="gone"
               />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
